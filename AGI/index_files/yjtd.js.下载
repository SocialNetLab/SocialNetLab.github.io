$(function () {
  let arr = []
  $('#ul li').each((index, item) => {
    $(item).text()
    let obj = {}
    obj.url = $(item).find('span').eq(0).text()
    obj.firstImgPath = $(item).find('span').eq(1).text()
    obj.title = $(item).find('span').eq(2).text()
    obj.shortTitle = $(item).find('span').eq(3).text()
    obj.summary = $(item).find('span').eq(4).text()
    // console.log(obj);
    arr.push(obj)
  })

  // console.log(arr)

  function spArr(arr, num) {
    let newArr = []
    for (let i = 0; i < arr.length;) {
      newArr.push(arr.slice(i, i += num))
    }
    return newArr
  }
  // console.log(spArr(arr, 2), arr);

  let str = ''
  spArr(arr, 2).forEach((item, index) => {
    if (index % 2 == 0) {
      str += `<li>
      <a href="${item[0].url}" class="item bg-cover" style="position: relative;">
        <div class="figure" style="background-color: #fff;">
          <div class="left_img">
            <img src="${item[0].firstImgPath}" alt="">
          </div>
          <div class="right_message">
            <div class="top">
              <span class="name">${item[0].title}</span>   <span style="color: #2DC0B6;">l</span>   <span
                class="post">${item[0].shortTitle}</span>
            </div>
            <div class="introduce">
              <p>${item[0].summary}</p>
            </div>
          </div>
        </div>
      </a>
  
      <a href="${item[1].url}" class="item bg-cover" style="position: relative;">
        <div class="figure" style="background-color: #fff;">
          <div class="left_img">
            <img src="${item[1].firstImgPath}" alt="">
          </div>
          <div class="right_message">
            <div class="top">
              <span class="name">${item[1].title}</span>   <span style="color: #2DC0B6;">l</span>   <span
                class="post">${item[1].shortTitle}</span>
            </div>
            <div class="introduce">
              <p>${item[1].summary}</p>
            </div>
          </div>
        </div>
      </a>
    </li>`
    }
    // 如果是奇数,最后一个
    else if (index == spArr(arr, 2).length - 1) {
      str += `<li>
      <a href="${item[0].url}" class="item bg-cover" style="position: relative;">
        <div class="figure" style="background-color: #fff;">
          <div class="left_img">
            <img src="${item[0].firstImgPath}" alt="">
          </div>
          <div class="right_message">
            <div class="top">
              <span class="name">${item[0].title}</span>   <span style="color: #2DC0B6;">l</span>   <span
                class="post">${item[0].shortTitle}</span>
            </div>
            <div class="introduce">
              <p>${item[0].summary}</p>
            </div>
          </div>
        </div>
      </a>
    </li>`
    }

  })

  // $(".index-br").html(str)

})