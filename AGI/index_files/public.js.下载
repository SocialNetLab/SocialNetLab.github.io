	$(document).ready(function () {

		var len = 10;//控制要显示的数量
		var arr = $(".equipment-tabs li:not(:hidden)");
		if (arr.length < len) {
			$(".more").hide();
		}
		if (arr.length > len) {
			$('.equipment-tabs li:gt(' + (len - 1) + ')').hide();
		}
		$(".more").click(function () {
			var arr = $(".equipment-tabs li:not(:hidden)");
			if (arr.length > len) {
				$('.equipment-tabs li:gt(' + (len - 1) + ')').hide();
			}
			else {
				$('.equipment-tabs li:gt(' + (len - 1) + ')').show();
			}
		});
		if ($('.equipment-tabs li').length > 10) {
			$('.equipment-tabs .more').css('display', 'block')
		}
	});

